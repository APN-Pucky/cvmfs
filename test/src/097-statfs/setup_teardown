test097_mount() {
  local test097_mount=$1
  local repo=$2
  local params=$3

  cvmfs_mount $repo $params
}

test097_unmount() {
  cvmfs_umount $repo $params
}

cleanup() {
  echo "running cleanup()..."
  if [ "x$TEST097_PIDS" != "x" ]; then
    sudo kill -9 $TEST097_PIDS
  fi
  if [ "x$TEST097_PRIVATE_MOUNT" != "x" ]; then
    test097_unmount
  fi
}
